/* pages/add/add.wxss */

page {
  background-color: #f7f8fc;
  height: 100%;
  display: flex;
  flex-direction: column;
}

/* ==================== Tab ==================== */
.tabs-wrap {
  display: flex;
  justify-content: center;
  padding: 20rpx 0 0;
}

.tabs {
  display: flex;
  background: #ecedf2;
  border-radius: 16rpx;
  padding: 6rpx;
  width: 340rpx;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  font-size: 28rpx;
  font-weight: 500;
  color: #999;
  border-radius: 12rpx;
  transition: all 0.25s ease;
}

.tab-active {
  color: #333;
  font-weight: 600;
  background: #ffffff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

/* ==================== 金额显示 ==================== */
.amount-display {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 48rpx 32rpx 36rpx;
}

.amount-value {
  font-size: 88rpx;
  font-weight: 700;
  color: #1a1a2e;
  letter-spacing: 2rpx;
}

/* ==================== 分类网格 ==================== */
.category-grid {
  display: flex;
  flex-wrap: wrap;
  padding: 0 32rpx 12rpx;
}

.category-item {
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx 0;
}

.cat-icon-wrap {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  background: #f0f1f5;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 10rpx;
  transition: all 0.25s ease;
}

.cat-selected {
  background: #ff6b35 !important;
  box-shadow: 0 6rpx 20rpx rgba(255, 107, 53, 0.35);
  transform: scale(1.08);
}

.cat-icon {
  font-size: 40rpx;
}

.cat-label {
  font-size: 22rpx;
  color: #888;
}

.cat-label-active {
  color: #ff6b35;
  font-weight: 600;
}

/* ==================== 备注栏 ==================== */
.note-bar {
  display: flex;
  align-items: center;
  margin: 8rpx 32rpx 12rpx;
  background: #ffffff;
  border-radius: 20rpx;
  padding: 20rpx 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.03);
}

.note-input {
  flex: 1;
  font-size: 26rpx;
  color: #333;
}

.note-placeholder {
  color: #ccc;
}

.date-btn {
  font-size: 24rpx;
  color: #888;
  flex-shrink: 0;
  margin-left: 16rpx;
  padding: 8rpx 16rpx;
  background: #f5f6fa;
  border-radius: 12rpx;
}

/* ==================== 自定义数字键盘 ==================== */
.keypad {
  display: flex;
  background: #e8e9ee;
  padding: 6rpx;
  gap: 6rpx;
  margin-top: auto;
}

.keypad-grid {
  flex: 3;
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 6rpx;
}

.keypad-right {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.key {
  display: flex;
  align-items: center;
  justify-content: center;
  background: #ffffff;
  border-radius: 12rpx;
  font-size: 44rpx;
  font-weight: 500;
  color: #1a1a2e;
  height: 100rpx;
  transition: background 0.1s ease;
}

.key:active {
  background: #d8d9de;
}

.key-del {
  background: #d4d5da;
}

.key-del:active {
  background: #c0c1c6;
}

.del-icon {
  font-size: 40rpx;
  color: #555;
}

.key-done {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #ff6b35;
  border-radius: 12rpx;
  transition: background 0.1s ease;
}

.key-done:active {
  background: #e55a28;
}

.done-text {
  font-size: 34rpx;
  font-weight: 600;
  color: #ffffff;
}
