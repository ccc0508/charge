/* pages/add/add.wxss */

/* ==================== 页面整体 ==================== */
page {
  background-color: #f7f8fc;
}

/* ==================== 收入/支出 Tab ==================== */
.tabs-wrap {
  display: flex;
  justify-content: center;
  padding: 24rpx 0 0;
}

.tabs {
  display: flex;
  background: #ecedf2;
  border-radius: 16rpx;
  padding: 6rpx;
  width: 360rpx;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 18rpx 0;
  font-size: 28rpx;
  font-weight: 500;
  color: #999;
  border-radius: 12rpx;
  transition: all 0.25s ease;
}

.tab-active {
  color: #333;
  font-weight: 600;
  background: #ffffff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

/* ==================== 金额输入区 ==================== */
.amount-display {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 60rpx 32rpx 48rpx;
}

.amount-input {
  font-size: 96rpx;
  font-weight: 700;
  color: #1a1a2e;
  text-align: center;
  letter-spacing: 2rpx;
  width: 100%;
  border: none;
}

.amount-placeholder {
  color: #ddd;
  font-weight: 400;
}

/* ==================== 分类选择区 ==================== */
.category-section {
  margin: 0 32rpx;
  background: #ffffff;
  border-radius: 24rpx;
  padding: 28rpx 16rpx;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.04);
}

.category-grid {
  display: flex;
  flex-wrap: wrap;
}

.category-item {
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 0;
}

.category-icon-wrap {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: #f5f6fa;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 12rpx;
  transition: all 0.25s ease;
}

.category-selected {
  background: #ff6b35 !important;
  box-shadow: 0 6rpx 24rpx rgba(255, 107, 53, 0.35);
  transform: scale(1.05);
}

.category-selected .category-icon {
  filter: brightness(1.15);
}

.category-icon {
  font-size: 44rpx;
}

.category-label {
  font-size: 24rpx;
  color: #888;
  transition: all 0.2s ease;
}

.label-selected {
  font-weight: 600;
  color: #ff6b35;
}

/* ==================== 表单区域 ==================== */
.form-section {
  margin: 24rpx 32rpx 0;
  background: #ffffff;
  border-radius: 24rpx;
  padding: 0 28rpx;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.04);
}

.form-row {
  display: flex;
  align-items: center;
  padding: 28rpx 0;
}

.form-divider {
  height: 1rpx;
  background: #f5f5f5;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.form-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  text-align: right;
}

.form-placeholder {
  color: #ccc;
}

/* 日期选择 */
.date-picker {
  display: flex;
  align-items: center;
  flex: 1;
  justify-content: flex-end;
}

.date-text {
  font-size: 28rpx;
  color: #333;
}

.date-arrow {
  font-size: 32rpx;
  color: #ccc;
  margin-left: 12rpx;
}

/* ==================== 保存按钮 ==================== */
.save-section {
  padding: 40rpx 32rpx 60rpx;
}

.save-btn {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  border-radius: 48rpx;
  font-size: 34rpx;
  font-weight: 600;
  color: #ffffff;
  border: none;
  background: linear-gradient(135deg, #ff6b35 0%, #ff8f5e 100%);
  box-shadow: 0 8rpx 30rpx rgba(255, 107, 53, 0.35);
  transition: all 0.2s ease;
}

.save-btn::after {
  border: none;
}

.save-btn:active {
  transform: scale(0.97);
}

.save-btn[disabled] {
  opacity: 0.5;
  background: #ccc;
  box-shadow: none;
}
