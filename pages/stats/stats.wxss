/* pages/stats/stats.wxss */

page {
  background-color: #f5f6fa;
}

/* ==================== 月份导航 ==================== */
.month-nav {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 32rpx 0 16rpx;
  gap: 40rpx;
}

.nav-arrow {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  color: #667eea;
  font-weight: 700;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.nav-arrow:active {
  background: #eef0fb;
}

.nav-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  min-width: 200rpx;
  text-align: center;
}

/* ==================== 图表卡片 ==================== */
.chart-section {
  margin: 24rpx 32rpx 0;
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.05);
}

.chart-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 28rpx;
}

.chart-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.chart-total {
  font-size: 30rpx;
  font-weight: 700;
}

.amount-expense {
  color: #e74c3c;
}

.amount-income {
  color: #2ecc71;
}

/* ==================== 图表区域 ==================== */
.chart-body {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.chart-canvas-wrap {
  width: 100%;
  display: flex;
  justify-content: center;
  margin-bottom: 28rpx;
}

.pie-canvas {
  width: 400rpx;
  height: 400rpx;
}

/* ==================== 图例 ==================== */
.legend-list {
  width: 100%;
}

.legend-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.legend-item:last-child {
  border-bottom: none;
}

.legend-left {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.legend-dot {
  width: 20rpx;
  height: 20rpx;
  border-radius: 6rpx;
  flex-shrink: 0;
}

.legend-icon {
  font-size: 36rpx;
}

.legend-label {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.legend-right {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.legend-amount {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.legend-percent {
  font-size: 24rpx;
  color: #999;
  min-width: 80rpx;
  text-align: right;
}

/* ==================== 空状态 ==================== */
.empty-chart {
  padding: 60rpx 0;
  text-align: center;
}

.empty-chart-text {
  font-size: 28rpx;
  color: #ccc;
}

/* ==================== 排行榜 ==================== */
.rank-list {
  width: 100%;
}

.rank-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.rank-item:last-child {
  border-bottom: none;
}

.rank-left {
  display: flex;
  align-items: center;
  flex: 1;
  min-width: 0;
  gap: 12rpx;
}

.rank-medal {
  width: 52rpx;
  height: 52rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 700;
  color: #999;
  flex-shrink: 0;
}

.rank-top {
  font-size: 32rpx;
}

.rank-icon {
  width: 52rpx;
  height: 52rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  flex-shrink: 0;
}

.rank-info {
  display: flex;
  flex-direction: column;
  justify-content: center;
  min-width: 0;
}

.rank-label {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.rank-note {
  font-size: 22rpx;
  color: #999;
  margin-top: 4rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.rank-amount {
  font-size: 30rpx;
  font-weight: 700;
  flex-shrink: 0;
  margin-left: 16rpx;
}
