/* pages/stats/stats.wxss */
page { background-color: #f7f8fc; }

.stats-header { display: flex; align-items: center; justify-content: space-between; padding: 20rpx 36rpx 12rpx; }
.stats-title { font-size: 40rpx; font-weight: 700; color: #1a1a2e; }
.month-selector { display: flex; align-items: center; gap: 16rpx; }
.nav-arrow { width: 52rpx; height: 52rpx; border-radius: 50%; background: #fff; display: flex; align-items: center; justify-content: center; font-size: 32rpx; color: #ff6b35; font-weight: 700; box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.06); }
.nav-arrow:active { background: #fff5f0; }
.nav-title { font-size: 28rpx; font-weight: 600; color: #333; min-width: 60rpx; text-align: center; }

.chart-section { margin: 20rpx 32rpx 0; background: #fff; border-radius: 24rpx; padding: 28rpx; box-shadow: 0 2rpx 16rpx rgba(0,0,0,0.04); }
.chart-header { display: flex; align-items: center; justify-content: space-between; margin-bottom: 24rpx; }
.chart-title { font-size: 30rpx; font-weight: 700; color: #1a1a2e; }
.chart-total { font-size: 30rpx; font-weight: 700; }
.expense-color { color: #e74c3c; }
.income-color { color: #2ecc71; }

.chart-body { display: flex; flex-direction: column; align-items: center; }
.chart-canvas-wrap { width: 100%; display: flex; justify-content: center; margin-bottom: 24rpx; }
.pie-canvas { width: 360rpx; height: 360rpx; }

.rank-bar-list { width: 100%; }
.rank-bar-item { display: flex; align-items: center; justify-content: space-between; padding: 14rpx 0; }
.rank-bar-left { display: flex; align-items: center; gap: 12rpx; width: 140rpx; flex-shrink: 0; }
.rank-bar-icon { font-size: 32rpx; }
.rank-bar-label { font-size: 26rpx; color: #555; font-weight: 500; }
.rank-bar-right { flex: 1; display: flex; align-items: center; gap: 16rpx; margin-left: 12rpx; }
.rank-bar-track { flex: 1; height: 16rpx; background: #f0f0f4; border-radius: 8rpx; overflow: hidden; }
.rank-bar-fill { height: 100%; border-radius: 8rpx; transition: width 0.5s ease; }
.rank-bar-percent { font-size: 24rpx; color: #999; font-weight: 500; min-width: 70rpx; text-align: right; }

.empty-chart { padding: 60rpx 0; text-align: center; }
.empty-chart-text { font-size: 28rpx; color: #ccc; }
