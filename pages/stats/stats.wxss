/* pages/stats/stats.wxss */

page {
  background-color: #f7f8fc;
}

/* ==================== 页面标题 ==================== */
.stats-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 36rpx 12rpx;
}

.stats-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #1a1a2e;
}

.month-selector {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.nav-arrow {
  width: 52rpx;
  height: 52rpx;
  border-radius: 50%;
  background: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #ff6b35;
  font-weight: 700;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.nav-arrow:active {
  background: #fff5f0;
}

.nav-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  min-width: 60rpx;
  text-align: center;
}

/* ==================== 图表卡片 ==================== */
.chart-section {
  margin: 20rpx 32rpx 0;
  background: #ffffff;
  border-radius: 24rpx;
  padding: 28rpx 28rpx;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.04);
}

.chart-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.chart-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #1a1a2e;
}

.chart-total {
  font-size: 30rpx;
  font-weight: 700;
}

.expense-color {
  color: #e74c3c;
}

.income-color {
  color: #2ecc71;
}

/* ==================== 图表区域 ==================== */
.chart-body {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.chart-canvas-wrap {
  width: 100%;
  display: flex;
  justify-content: center;
  margin-bottom: 24rpx;
}

.pie-canvas {
  width: 360rpx;
  height: 360rpx;
}

/* ==================== 进度条排行 ==================== */
.rank-bar-list {
  width: 100%;
}

.rank-bar-title {
  font-size: 28rpx;
  font-weight: 700;
  color: #1a1a2e;
  margin-bottom: 20rpx;
}

.rank-bar-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 14rpx 0;
}

.rank-bar-left {
  display: flex;
  align-items: center;
  gap: 12rpx;
  width: 140rpx;
  flex-shrink: 0;
}

.rank-bar-icon {
  font-size: 32rpx;
}

.rank-bar-label {
  font-size: 26rpx;
  color: #555;
  font-weight: 500;
}

.rank-bar-right {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-left: 12rpx;
}

.rank-bar-track {
  flex: 1;
  height: 16rpx;
  background: #f0f0f4;
  border-radius: 8rpx;
  overflow: hidden;
}

.rank-bar-fill {
  height: 100%;
  border-radius: 8rpx;
  transition: width 0.5s ease;
}

.rank-bar-percent {
  font-size: 24rpx;
  color: #999;
  font-weight: 500;
  min-width: 70rpx;
  text-align: right;
}

/* ==================== 空状态 ==================== */
.empty-chart {
  padding: 60rpx 0;
  text-align: center;
}

.empty-chart-text {
  font-size: 28rpx;
  color: #ccc;
}

/* ==================== 排行榜 ==================== */
.rank-list {
  width: 100%;
}

.rank-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 18rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.rank-item:last-child {
  border-bottom: none;
}

.rank-left {
  display: flex;
  align-items: center;
  flex: 1;
  min-width: 0;
  gap: 12rpx;
}

.rank-medal {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 700;
  color: #bbb;
  flex-shrink: 0;
}

.rank-top {
  font-size: 32rpx;
}

.rank-icon-wrap {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.rank-icon-expense {
  background: #fff0ee;
}

.rank-icon-income {
  background: #edfcf2;
}

.rank-icon {
  font-size: 32rpx;
}

.rank-info {
  display: flex;
  flex-direction: column;
  justify-content: center;
  min-width: 0;
}

.rank-label {
  font-size: 28rpx;
  font-weight: 600;
  color: #1a1a2e;
}

.rank-note {
  font-size: 22rpx;
  color: #aaa;
  margin-top: 4rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.rank-amount {
  font-size: 30rpx;
  font-weight: 700;
  flex-shrink: 0;
  margin-left: 16rpx;
}

/* ==================== 柱形图 ==================== */
.bar-legend {
  display: flex;
  justify-content: center;
  gap: 40rpx;
  margin-bottom: 16rpx;
}

.bar-legend-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.bar-legend-dot {
  width: 20rpx;
  height: 20rpx;
  border-radius: 4rpx;
}

.bar-legend-text {
  font-size: 24rpx;
  color: #666;
}

.bar-scroll {
  width: 100%;
  white-space: nowrap;
  margin-bottom: 24rpx;
}

.bar-canvas-inner {
  width: 900rpx;
  display: inline-block;
}

.bar-canvas {
  width: 900rpx;
  height: 480rpx;
}

/* ==================== 年度汇总 ==================== */
.yearly-summary {
  display: flex;
  justify-content: space-around;
  padding: 24rpx 0 8rpx;
  border-top: 1rpx solid #f0f0f0;
}

.yearly-summary-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.yearly-summary-label {
  font-size: 22rpx;
  color: #999;
}

.yearly-summary-value {
  font-size: 28rpx;
  font-weight: 700;
}
