/* pages/asset/asset.wxss */
page { background-color: #f7f8fc; }

.page-header { padding: 20rpx 36rpx 12rpx; }
.page-title { font-size: 40rpx; font-weight: 700; color: #1a1a2e; }

/* 总资产卡片 */
.asset-card {
  margin: 16rpx 32rpx 0;
  padding: 48rpx 36rpx;
  border-radius: 28rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.15);
}
.card-positive {
  background: linear-gradient(145deg, #1a1a2e 0%, #16213e 60%, #1a3a5c 100%);
}
.card-negative {
  background: linear-gradient(145deg, #2e1a1a 0%, #3e1616 60%, #5c1a1a 100%);
}
.asset-card-label { font-size: 26rpx; color: rgba(255,255,255,0.6); margin-bottom: 16rpx; }
.asset-card-amount { font-size: 80rpx; font-weight: 700; color: #fff; letter-spacing: 2rpx; }
.asset-card-tag {
  position: absolute; top: 24rpx; right: 24rpx;
  background: rgba(231,76,60,0.3); border-radius: 12rpx; padding: 6rpx 16rpx;
}
.tag-text { font-size: 20rpx; color: #ff8a8a; font-weight: 600; }

/* 资产明细 */
.detail-section {
  margin: 24rpx 32rpx 0;
  background: #fff;
  border-radius: 24rpx;
  padding: 8rpx 28rpx;
  box-shadow: 0 2rpx 16rpx rgba(0,0,0,0.04);
}
.detail-item { display: flex; align-items: center; justify-content: space-between; padding: 28rpx 0; }
.detail-divider { height: 1rpx; background: #f5f5f5; }
.detail-left { display: flex; align-items: center; gap: 16rpx; }
.detail-icon-wrap { width: 72rpx; height: 72rpx; border-radius: 50%; display: flex; align-items: center; justify-content: center; }
.detail-icon { font-size: 32rpx; }
.detail-label { font-size: 28rpx; font-weight: 500; color: #333; }
.detail-value { font-size: 30rpx; font-weight: 700; color: #1a1a2e; }
.income-color { color: #2ecc71; }
.expense-color { color: #e74c3c; }

/* 设置区 */
.setting-section {
  margin: 24rpx 32rpx 0;
  background: #fff;
  border-radius: 24rpx;
  padding: 28rpx;
  box-shadow: 0 2rpx 16rpx rgba(0,0,0,0.04);
}
.setting-header { margin-bottom: 20rpx; }
.setting-title { font-size: 30rpx; font-weight: 700; color: #1a1a2e; }
.setting-hint { font-size: 22rpx; color: #aaa; margin-left: 12rpx; }
.input-row {
  display: flex; align-items: center;
  background: #f5f6fa; border-radius: 16rpx; padding: 20rpx 24rpx; margin-bottom: 24rpx;
}
.input-prefix { font-size: 36rpx; font-weight: 700; color: #333; margin-right: 12rpx; }
.asset-input { flex: 1; font-size: 36rpx; font-weight: 600; color: #1a1a2e; }
.input-placeholder { color: #ccc; font-weight: 400; }

.save-btn {
  width: 100%; height: 88rpx; line-height: 88rpx; border-radius: 44rpx;
  font-size: 32rpx; font-weight: 600; color: #fff; border: none;
  background: linear-gradient(135deg, #ff6b35 0%, #ff8f5e 100%);
  box-shadow: 0 8rpx 24rpx rgba(255,107,53,0.35);
}
.save-btn::after { border: none; }
.save-btn:active { transform: scale(0.97); }
