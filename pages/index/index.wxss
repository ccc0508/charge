/* pages/index/index.wxss */

/* ==================== 页面整体 ==================== */
page {
  background-color: #f7f8fc;
}

/* ==================== 页面标题 ==================== */
.page-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 36rpx 12rpx;
}

.page-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #1a1a2e;
}

.page-month {
  font-size: 28rpx;
  color: #999;
  font-weight: 500;
}

/* ==================== 余额卡片 ==================== */
.balance-card {
  margin: 16rpx 32rpx 0;
  padding: 40rpx 36rpx 36rpx;
  border-radius: 28rpx;
  background: linear-gradient(145deg, #1a1a2e 0%, #16213e 60%, #1a3a5c 100%);
  box-shadow: 0 16rpx 48rpx rgba(22, 33, 62, 0.35);
}

.balance-top {
  margin-bottom: 12rpx;
}

.balance-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
  font-weight: 400;
}

.balance-amount {
  display: block;
  font-size: 72rpx;
  font-weight: 700;
  color: #ffffff;
  letter-spacing: 2rpx;
  margin-bottom: 32rpx;
}

.balance-row {
  display: flex;
  justify-content: space-between;
}

.balance-col {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.balance-sub-label {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.5);
}

.balance-sub-amount {
  font-size: 32rpx;
  font-weight: 600;
}

.income-color {
  color: #5feba0;
}

.expense-color {
  color: #ff8a8a;
}

/* ==================== 快捷入口 ==================== */
.quick-actions {
  display: flex;
  justify-content: space-around;
  padding: 32rpx 32rpx 16rpx;
}

.quick-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
}

.quick-icon-wrap {
  width: 96rpx;
  height: 96rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.quick-icon {
  font-size: 40rpx;
}

.quick-label {
  font-size: 22rpx;
  color: #666;
  font-weight: 500;
}

/* ==================== 记录列表 ==================== */
.record-list {
  padding: 8rpx 32rpx 0;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 0 80rpx;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 30rpx;
  color: #999;
  font-weight: 500;
}

.empty-sub {
  font-size: 24rpx;
  color: #ccc;
  margin-top: 8rpx;
}

/* 日期分组 */
.date-group {
  margin-bottom: 20rpx;
}

.date-header {
  padding: 20rpx 4rpx 12rpx;
}

.date-label {
  font-size: 26rpx;
  font-weight: 600;
  color: #999;
}

/* 记录卡片容器 */
.records-card {
  background: #ffffff;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.04);
}

/* 滑动容器 */
.swipe-wrapper {
  position: relative;
  overflow: hidden;
}

.swipe-wrapper:not(:last-child) .record-item {
  border-bottom: 1rpx solid #f5f5f5;
}

/* 单条记录 */
.record-item {
  position: relative;
  z-index: 2;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #ffffff;
  padding: 28rpx 28rpx;
  transition: transform 0.2s ease;
}

/* 删除按钮 */
.delete-btn {
  position: absolute;
  right: 0;
  top: 0;
  bottom: 0;
  width: 65px;
  background: #e74c3c;
  color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 600;
  z-index: 1;
}

.record-left {
  display: flex;
  align-items: center;
  flex: 1;
  min-width: 0;
}

.record-icon-wrap {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.icon-bg-expense {
  background: #fff0ee;
}

.icon-bg-income {
  background: #edfcf2;
}

.record-icon {
  font-size: 36rpx;
}

.record-info {
  display: flex;
  flex-direction: column;
  min-width: 0;
}

.record-category {
  font-size: 30rpx;
  font-weight: 600;
  color: #1a1a2e;
}

.record-note {
  font-size: 22rpx;
  color: #aaa;
  margin-top: 6rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 金额 */
.record-amount {
  font-size: 32rpx;
  font-weight: 700;
  flex-shrink: 0;
  margin-left: 20rpx;
}

/* ==================== 底部占位 ==================== */
.bottom-spacer {
  height: 160rpx;
}

/* ==================== 悬浮添加按钮 ==================== */
.fab {
  position: fixed;
  bottom: 60rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #ff6b35 0%, #ff8f5e 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 30rpx rgba(255, 107, 53, 0.45);
  z-index: 999;
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.fab:active {
  transform: translateX(-50%) scale(0.9);
  box-shadow: 0 4rpx 16rpx rgba(255, 107, 53, 0.3);
}

.fab-icon {
  font-size: 56rpx;
  color: #ffffff;
  font-weight: 300;
  line-height: 1;
}
