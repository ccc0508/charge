/* pages/index/index.wxss */

/* ==================== 页面整体 ==================== */
page {
  background-color: #f5f6fa;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC',
    'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
}

/* ==================== 顶部统计卡片 ==================== */
.header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 60rpx 32rpx 40rpx;
  border-radius: 0 0 40rpx 40rpx;
}

.month-title {
  color: rgba(255, 255, 255, 0.85);
  font-size: 30rpx;
  font-weight: 500;
}

.header-top {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 28rpx;
}

.stats-btn {
  font-size: 24rpx;
  color: #ffffff;
  background: rgba(255, 255, 255, 0.2);
  padding: 8rpx 24rpx;
  border-radius: 24rpx;
}

.stats-btn:active {
  background: rgba(255, 255, 255, 0.35);
}

.summary-cards {
  display: flex;
  justify-content: space-between;
  gap: 16rpx;
}

.card {
  flex: 1;
  background: rgba(255, 255, 255, 0.18);
  backdrop-filter: blur(10px);
  border-radius: 20rpx;
  padding: 24rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.card-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 12rpx;
}

.card-amount {
  font-size: 34rpx;
  font-weight: 700;
  color: #ffffff;
}

.card-income .card-amount {
  color: #a8edba;
}

.card-expense .card-amount {
  color: #ffb3b3;
}

.card-balance .card-amount {
  color: #b3d4ff;
}

/* ==================== 记录列表 ==================== */
.record-list {
  padding: 24rpx 32rpx 0;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 0;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 日期分组 */
.date-group {
  margin-bottom: 28rpx;
}

.date-header {
  padding: 16rpx 0;
}

.date-label {
  font-size: 26rpx;
  font-weight: 600;
  color: #555;
}

/* 滑动容器 */
.swipe-wrapper {
  position: relative;
  overflow: hidden;
  border-radius: 20rpx;
  margin-bottom: 12rpx;
}

/* 单条记录 */
.record-item {
  position: relative;
  z-index: 2;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #ffffff;
  border-radius: 20rpx;
  padding: 28rpx 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
  transition: transform 0.2s ease;
}

/* 删除按钮 */
.delete-btn {
  position: absolute;
  right: 0;
  top: 0;
  bottom: 0;
  width: 65px;
  background: #e74c3c;
  color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 600;
  border-radius: 0 20rpx 20rpx 0;
  z-index: 1;
}

.record-left {
  display: flex;
  align-items: center;
  flex: 1;
  min-width: 0;
}

.record-icon {
  font-size: 44rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.record-info {
  display: flex;
  flex-direction: column;
  min-width: 0;
}

.record-category {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
}

.record-note {
  font-size: 24rpx;
  color: #999;
  margin-top: 6rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 金额 */
.record-amount {
  font-size: 32rpx;
  font-weight: 700;
  flex-shrink: 0;
  margin-left: 20rpx;
}

.amount-income {
  color: #2ecc71;
}

.amount-expense {
  color: #e74c3c;
}

/* ==================== 底部占位 ==================== */
.bottom-spacer {
  height: 160rpx;
}

/* ==================== 悬浮添加按钮 ==================== */
.fab {
  position: fixed;
  bottom: 60rpx;
  right: 50%;
  transform: translateX(50%);
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 30rpx rgba(102, 126, 234, 0.45);
  z-index: 999;
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.fab:active {
  transform: translateX(50%) scale(0.9);
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.3);
}

.fab-icon {
  font-size: 56rpx;
  color: #ffffff;
  font-weight: 300;
  line-height: 1;
}
