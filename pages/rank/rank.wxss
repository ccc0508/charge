/* pages/rank/rank.wxss */
page { background-color: #f7f8fc; }

.stats-header { display: flex; align-items: center; justify-content: space-between; padding: 20rpx 36rpx 12rpx; }
.stats-title { font-size: 40rpx; font-weight: 700; color: #1a1a2e; }
.month-selector { display: flex; align-items: center; gap: 16rpx; }
.nav-arrow { width: 52rpx; height: 52rpx; border-radius: 50%; background: #fff; display: flex; align-items: center; justify-content: center; font-size: 32rpx; color: #ff6b35; font-weight: 700; box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.06); }
.nav-arrow:active { background: #fff5f0; }
.nav-title { font-size: 28rpx; font-weight: 600; color: #333; min-width: 60rpx; text-align: center; }

.section-card { margin: 20rpx 32rpx 0; background: #fff; border-radius: 24rpx; padding: 28rpx; box-shadow: 0 2rpx 16rpx rgba(0,0,0,0.04); }
.section-header { margin-bottom: 20rpx; }
.section-title { font-size: 30rpx; font-weight: 700; color: #1a1a2e; }
.expense-color { color: #e74c3c; }
.income-color { color: #2ecc71; }

.rank-list { width: 100%; }
.rank-item { display: flex; align-items: center; justify-content: space-between; padding: 18rpx 0; border-bottom: 1rpx solid #f5f5f5; }
.rank-item:last-child { border-bottom: none; }
.rank-left { display: flex; align-items: center; flex: 1; min-width: 0; gap: 12rpx; }
.rank-medal { width: 48rpx; height: 48rpx; display: flex; align-items: center; justify-content: center; font-size: 28rpx; font-weight: 700; color: #bbb; flex-shrink: 0; }
.rank-top { font-size: 32rpx; }
.rank-icon-wrap { width: 64rpx; height: 64rpx; border-radius: 50%; display: flex; align-items: center; justify-content: center; flex-shrink: 0; }
.rank-icon-expense { background: #fff0ee; }
.rank-icon-income { background: #edfcf2; }
.rank-icon { font-size: 32rpx; }
.rank-info { display: flex; flex-direction: column; justify-content: center; min-width: 0; }
.rank-label { font-size: 28rpx; font-weight: 600; color: #1a1a2e; }
.rank-note { font-size: 22rpx; color: #aaa; margin-top: 4rpx; overflow: hidden; text-overflow: ellipsis; white-space: nowrap; }
.rank-amount { font-size: 30rpx; font-weight: 700; flex-shrink: 0; margin-left: 16rpx; }

.empty-state { display: flex; flex-direction: column; align-items: center; padding: 120rpx 0; }
.empty-icon { font-size: 80rpx; margin-bottom: 20rpx; }
.empty-text { font-size: 28rpx; color: #ccc; }
